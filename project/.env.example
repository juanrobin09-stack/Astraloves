VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# STRIPE CONFIGURATION - À REMPLIR
# ============================================

# 1. CLÉ SECRÈTE STRIPE (OBLIGATOIRE)
# Où trouver: Dashboard Stripe > Développeurs > Clés API
# Format: sk_test_... (test) ou sk_live_... (production)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# 1b. CLÉ PUBLIQUE STRIPE (OBLIGATOIRE)
# Où trouver: Dashboard Stripe > Développeurs > Clés API > "Clé publiable"
# Format: pk_test_... (test) ou pk_live_... (production)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_public_key_here

# 2. SECRET WEBHOOK (OBLIGATOIRE)
# Où trouver: Dashboard Stripe > Développeurs > Webhooks > Votre endpoint > Secret de signature
# Format: whsec_...
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# 3. PRICE IDs POUR LES ABONNEMENTS PREMIUM
# Où trouver: Dashboard Stripe > Produits > Votre produit > Prix > Copier l'ID
# Format: price_...

# Abonnement Premium (mensuel)
STRIPE_PRICE_PREMIUM=price_1234567890abcdefghij

# Abonnement Premium Plus (mensuel)
STRIPE_PRICE_PREMIUM_PLUS=price_0987654321jihgfedcba
